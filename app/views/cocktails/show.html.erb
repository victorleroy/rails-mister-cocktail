<div class="container padded">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1><%= @cocktail.name %></h1>
        <% @cocktail.ingredients.each do |ingredient| %>
          <ul>
            <li>
              <%= ingredient.name %>
            </li>
          </ul>
        <% end %>

        <% @cocktail.doses.each do |dose| %>
          <ul>
            <li>
              <%= dose.description %>
            </li>
          </ul>
        <% end %>
      <%= link_to 'Back to Cocktails', cocktails_path %>
    </div>
  </div>
</div>



